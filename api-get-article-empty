#!/bin/bash
#
# curl api call tests
#
# options:
#
# -v verbose
# -i Include protocol headers in the output (H/F)
#
# use -X POST for post requests
#
# -L is generally needed to follow redirects
#
#

. api-config

echo
echo "GET product by id (uses VirtueMart product id for now)"
echo

curl -Li "${BASE_URL}/index.php?option=com_api&app=kivishop&resource=article&format=raw&id=0" \
    --header "$AUTH_HEADER"

echo
echo
